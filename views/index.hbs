<div class="main-content">
    <div class="hero-section">
        <h2>Bienvenue sur Vapeur</h2>
        <p>Votre plateforme de jeux vidéo préférée</p>
    </div>
    
    {{#if jeuxMisEnAvant.length}}
        <div class="mise-en-avant-section">
            <h3>Jeux mis en avant</h3>
            <div class="games-grid">
                {{#each jeuxMisEnAvant}}
                <div class="game-card-wrapper" data-game-id="{{id}}" data-featured="{{mis_avant}}">
                    <a href="/jeux/{{id}}" class="card-link">
                        <div class="game-card featured-game">
                            <div class="game-image">
                                {{#if image}}
                                    <img src="{{image}}" alt="{{titre}}" class="game-cover">
                                {{else}}
                                    <div class="image-placeholder">
                                        <span>Aucune image</span>
                                    </div>
                                {{/if}}
                            </div>
                            <div class="game-info">
                                <h3>{{titre}}</h3>
                                <div class="game-tags">
                                    {{#each genres}}
                                        <span class="genre-tag">{{genre.nom}}</span>
                                    {{/each}}
                                </div>
                            </div>
                            <div class="star-container">
                                <button class="star-button active" data-game-id="{{id}}" 
                                        title="Retirer des favoris">
                                    ⭐
                                </button>
                            </div>
                        </div>
                    </a>
                </div>
                {{/each}}
            </div>
        </div>
    {{else}}
        <div class="empty-state">
            <h2>Aucun jeu mis en avant</h2>
            <p>Aucun jeu n'est actuellement mis en avant.</p>
            <a href="/jeux" class="btn btn-primary">Voir tous les jeux</a>
        </div>
    {{/if}}

    {{#if editeurs.length}}
        <div class="editeurs-section">
            <h3>Éditeurs</h3>
            <div class="editeurs-grid-home">
                {{#each editeurs}}
                    <a href="/editeurs/{{id}}" class="card-link">
                        <div class="editeur-card-home">
                            <div class="editeur-info">
                                <h4>{{nom}}</h4>
                                <p class="editeur-count">{{nbJeux}} jeux</p>
                            </div>
                        </div>
                    </a>
                {{/each}}
            </div>
        </div>
    {{/if}}
</div>